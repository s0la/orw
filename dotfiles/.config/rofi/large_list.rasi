/* large list config */

@import "list"

* {
	font:   "SFMono Medium 7";

	window-width:    25%;
	window-height:   25%;
	window-border:   2px;
	window-padding:  2% 2%;

	list-padding:    0px 0px;
	list-spacing:    0px;
	list-margin:     10px 0;

	input-margin:    0 0 10px;
	input-padding:   3px 0px;

	entry-margin:      0 3px 0;

	element-padding:   2px 5px;
}

#window {
	width:   @window-width;
	height:  @window-height;
	border:  @window-border;
	padding: @window-padding;
}

#listview {
	margin:         @list-margin;
	padding:        @list-padding;
	spacing:        @list-spacing;
	scrollbar:      false;
	vertical-align: 0.5;
}

#inputbar {
	background:     @bg;
	border:         @input-border;
	margin:         @element-padding;
	margin:         @input-padding;
	padding:        @element-padding;
	children:       [ prompt, entry ];
	background-color: @bg;
}

#element {
	padding:        @element-padding;
}

#entry {
	margin:           @entry-margin;
	background-color: @bg;
	border-color:     @fg;
}

#prompt {
	background-color: @bg;
}

#textbox-prompt-colon {
	background-color: @ibg;
}
