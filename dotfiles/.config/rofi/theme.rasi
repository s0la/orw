	tbg: #ed12171b;
	tbg: argb:ed12171b;
	mbg: argb:f00d1114;
	msbg: argb:701b2227;
	fg: #323e45;
	bc: #12171b;
	bc: #12171b;
	ibg: #12171b;
	ibc: #12171b;
	ibc: #12171b;
	abg: #00000030;
	abg: #00000030;
