style "button" = "wider" {
    xthickness = 3
    ythickness = 4

	font_name = '8'

	bg[NORMAL]      = shade(0.88, @base_color)
	bg[ACTIVE]      = shade(0.84, @base_color)
	bg[PRELIGHT]    = shade(0.84, @base_color)
	bg[SELECTED]    = shade(0.84, @base_color)
	bg[INSENSITIVE] = shade(1.0, @base_color)

	fg[NORMAL]      = @fg_color
	fg[ACTIVE]      = shade(0.88, @base_color)
	fg[PRELIGHT]    = shade(0.88, @active_color)
	fg[SELECTED]    = shade(0.88, @base_color)
	fg[INSENSITIVE] = shade(1.0, @base_color)

	engine "pixmap" {
		image {
			function = BOX
			state    = NORMAL
			file     = "apps/assets/default.png"
			border   = { 2, 2, 2, 2 }
			stretch  = TRUE
		}

		image {
			function = BOX
			state    = PRELIGHT
			file     = "apps/assets/hover.png"
			border   = { 0, 0, 0, 2 }
			stretch  = TRUE
		}

		image {
			function = BOX
			state    = ACTIVE
			file     = "apps/assets/active.png"
			border   = { 0, 0, 0, 2 }
			stretch  = TRUE
		}

		image {
			function = BOX
			state    = INSENSITIVE
			file     = ""
			border   = { 2, 2, 2, 2 }
			stretch  = TRUE
		}
	}

    engine "murrine" {
		focusstyle  = 0
		reliefstyle = 0
	}
}

